<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">content_listing_page.content_listing_page_data_source</item>
            <item name="deps" xsi:type="string">content_listing_page.content_listing_page_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>content_listing_page_columns</spinner>
        <deps>
            <dep>content_listing_page.content_listing_page_data_source</dep>
        </deps>
    </settings>
    <dataSource name="content_listing_page_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <aclResource>DeployEcommerce_BuilderIO::listing</aclResource>
        <dataProvider class="DeployEcommerce\BuilderIO\Ui\DataProvider\ContentPageDataProvider"
                      name="content_listing_page_data_source">
            <settings>
                <requestFieldName>webhook_id</requestFieldName>
                <primaryFieldName>webhook_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <filterSearch name="fulltext"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="content_listing_page_columns">
        <column name="id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="builderio_page_id">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Builder.io ID</label>
            </settings>
        </column>
        <column name="url">
            <settings>
                <filter>textRange</filter>
                <label translate="true">URL</label>
            </settings>
        </column>
        <column name="title">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Title</label>
            </settings>
        </column>
        <column name="meta_description">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Meta Description</label>
            </settings>
        </column>
        <column name="meta_keywords">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Meta Keywords</label>
            </settings>
        </column>
        <column name="store_ids">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Store Ids</label>
            </settings>
        </column>
        <column name="status">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="created_at">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Created At</label>
            </settings>
        </column>
        <column name="updated_at">
            <settings>
                <filter>textRange</filter>
                <label translate="true">Updated At</label>
            </settings>
        </column>
    </columns>
</listing>
